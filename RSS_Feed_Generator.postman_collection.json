{
	"info": {
		"_postman_id": "a unique ID for your collection",
		"name": "RSS Feed Generator Backend",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Upload Media",
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "formdata",
					"formdata": [
						{
							"key": "media",
							"type": "file",
							"src": "/path/to/your/local/file.jpg" // IMPORTANT: Replace with your local file path
						}
					]
				},
				"url": {
					"raw": "http://localhost/api/v1/media/upload",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"path": [
						"api",
						"v1",
						"media",
						"upload"
					]
				},
				"description": "Uploads a media file (image or video) to the server. The response will include a `media_id` which should be used for adding an RSS item."
			},
			"response": []
		},
		{
			"name": "Add RSS Item",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"media_id\": 1, // Replace with the media_id obtained from the Upload Media endpoint\n    \"title\": \"My Awesome New Content\",\n    \"caption\": \"This is a description of my awesome new content.\"\n}"
				},
				"url": {
					"raw": "http://localhost/api/v1/rss/items",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"path": [
						"api",
						"v1",
						"rss",
						"items"
					]
				},
				"description": "Adds a new RSS feed item by linking to an already uploaded media file. Ensure 'media_id' is correct."
			},
			"response": []
		},
		{
			"name": "Get All RSS Items",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "http://localhost/api/v1/rss/items",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"path": [
						"api",
						"v1",
						"rss",
						"items"
					]
				},
				"description": "Retrieves all RSS feed items from the database."
			},
			"response": []
		},
		{
			"name": "Generate RSS Feed (XML)",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "http://localhost/api/v1/rss/feed.xml",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"path": [
						"api",
						"v1",
						"rss",
						"feed.xml"
					]
				},
				"description": "Generates and returns the RSS 2.0 XML feed."
			},
			"response": []
		}
	]
}